// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "icon_theme": "Catppuccin Latte",
  "agent": {
    "default_profile": "ask",
    "use_modifier_to_send": true,
    "play_sound_when_agent_done": true,
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-pro"
    },
    "inline_assistant_model": {
      "provider": "openai",
      "model": "gpt-4o-mini"
    }
  },
  "ui_font_size": 16,
  // change font family
  "buffer_font_family": "SF Mono",
  // change editor font size
  "buffer_font_size": 13,

  //Vim Mode
  "vim_mode": true,
  //"vim": {
  //  "enable_vim_sneak": true
  //},
  // use relative line numbers
  "relative_line_numbers": true,
  "tab_bar": {
    "show": true
  },

  // only show error on tab
  "tabs": {
    "show_diagnostics": "errors"
  },

  // indentation with rainbow indentation
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  // NOTE: Zen mode, refer https://github.com/zed-industries/zed/issues/4382 when it's resolved
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },

  // Softwrap
  "preferred_line_length": 80,
  "soft_wrap": "preferred_line_length",

  // spaces, not tabs of 2
  "tab_size": 2,
  "hard_tabs": false,
  // exclusion for python and go
  "languages": {
    "Python": {
      "tab_size": 4
    },
    "Go": {
      "hard_tabs": true
    }
  },
  // File scan exclusions, hide on the file explorer and search
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  // Turn off telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Ayu Dark"
  },

  "language_models": {
    "ollama": {
      "api_url": "http://10.0.0.181:11434",
      "available_models": [
        {
          //"provider": "ollama",
          "name": "gpt-oss:20b",
          "display_name": "gpt-oss",
          "max_tokens": 33000
        },
        {
          //"provider": "ollama",
          "name": "gemma3:27b",
          "display_name": "gemma3",
          "max_tokens": 33000
        }
      ]
    }
  }
}
